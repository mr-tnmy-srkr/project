<!-- using ejs-mate -->
<% layout('/layouts/boilerplate.ejs') %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><%= listing.title %></h3>
  </div>
  <div class="listing-card col-8 offset-2 show-card">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
    <br>
    <%= listing.description %>
    <br>
    &#8377 <%= listing.price.toLocaleString("en-IN") %>
    <br>
    <%= listing.country %>
    <br>
    <%= listing.location %>
    </p>
    </div>
  </div>

  <br>
  <div class="btns">
  <a href="/listings/<%= listing._id %>/edit"class="btn btn-dark  add-btn " >
    Edit
</a>
<br>
<br>

  <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" >
      <button class="btn btn-dark ">Delete</button>
  </form>
</div>
</div>

<div class="col-8 offset-3">
  <hr>
  <h4>Leave a review</h4>
  <form method="post" action="/listings/<%= listing.id %>/reviews" class="mb-3 needs-validation"
    novalidate>
    <div class="mb-3 mt-3">
      <label for="rating" >Rating</label>
      <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
    </div>
    <div class="mb-3 mt-3">
      <label for="comment"  class="form-level">Comments</label>
      <textarea name="review[comment]" cols="30" rows="5" id="comment" class="form-control" required></textarea>
      <div class="invalid-feedback">
        Please add some comments for review
      </div>
    </div>
    <button type="submit" class="btn btn-outline-dark">Submit</button>
  </form>

  <hr>

  <p><b>All Reviews</b></p>
<div class="row">
<% for(review of listing.reviews) { %>
<div class="card col-5 ms-3 mb-3">
  <div class="card-body">
    <h5 class="card-title">Jane Doe</h5>
    <div class="card-text"><%= review.comment %></div>
    <div class="card-text"><%= review.rating %>Stars</div>
    <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
    <button class="btn btn-sm btn-dark">Delete</button>
    </form>
  </div>
</div>
<% } %>
</ul>
</div>

</div>

